        <record model="ir.actions.act_window" id="action_material_requisition">
            <field name="name">Requisition Orders</field>
            <field name="res_model">requisition.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="menu_material_requisition"
            name="Requisitions"
            groups="base.group_user"
            icon="purchase-requisition" 
            web_icon="sea_requisitions,static/description/icon2.png"
            web_icon_hover="static/description/icon2.png"/>
        <menuitem id="menu_item_material_requisition" name="Requisition Order" parent="menu_material_requisition"/>
        <menuitem id="menu_item_report" name="Reporting" parent="menu_material_requisition"/>
        <menuitem id="menu_action_material_requisition" name="Requisitions" parent="menu_item_material_requisition" action="action_material_requisition"/>
        
    </data>
</odoo>
