<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="sc_sale_quotation_view_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='client_order_ref']" position="after">
                    <field name="CustomerPONo" attrs="{'invisible': [('company_id', '!=', 11)]}"/>
                    <field name="CustomerOrderDate" attrs="{'invisible': [('company_id', '!=', 11)]}"/>
                </xpath>

                <xpath expr='//notebook' position="inside">
                    <page string="Customer Info">
                        <group>
                            <group string="Information">
                                <field name="CustomerInquiryNo" attrs="{'invisible': [('company_id', '!=', 11)]}"/>
                                <field name="CustomerInquiryDate" attrs="{'invisible': [('company_id', '!=', 11)]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
