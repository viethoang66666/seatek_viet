<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_contract_extend_form_view">
            <field name="name">hr.contract.form.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <field name="job_id" position="after">
                    <field name="contract_category"/>
                    <field name="ref_contract_id"/>
                    <field name="contract_period_id"/>
                    <field name="contract_term"/>         
                </field>

                <field name="advantages" position="after">
                    <label for="contract_extend_salary"/>
                                    <div class="o_row" name="contract_extend_salary">
                                        <field name="contract_extend_salary" nolabel="1"/>
                                        <span>/ month</span>
                                    </div>
                </field>

            </field>
        </record>
    </data>
</odoo>